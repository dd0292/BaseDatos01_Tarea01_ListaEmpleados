
@{
    ViewBag.Title = "XML_Fuctions";
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert  alert-info">
        <strong>Informacion: </strong>  @TempData["InfoMessage"]
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert  alert-success">
        <strong>Informacion: </strong>  @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert  alert-danger">
        <strong>ERROR: </strong>  @TempData["ErrorMessage"]
    </div>
}

<h2>XML_Fuctions</h2>

@using (Html.BeginForm("XML_Fuctions", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="xmlCatalogos">Archivo XML de Catálogos:</label>
        <input type="file" name="xmlCatalogos" id="xmlCatalogos" class="form-control" accept=".xml" required />
    </div>

    <div class="form-group">
        <label for="xmlOperaciones">Archivo XML de Operaciones:</label>
        <input type="file" name="xmlOperaciones" id="xmlOperaciones" class="form-control" accept=".xml" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Subir y Procesar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info mt-4">@ViewBag.Mensaje</div>
}
