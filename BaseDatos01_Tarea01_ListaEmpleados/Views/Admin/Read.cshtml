@model BaseDatos01_Tarea01_ListaEmpleados.Models.Employee

@{
    ViewBag.Title = "Detalles del Empleado";
}

<h2>Consulta de Empleado</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>ERROR:</strong> @TempData["ErrorMessage"]
    </div>
}

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Nombre:</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.Nombre</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Documento de Identidad:</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.ValorDocumentoIdentidad</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Puesto:</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.NombrePuesto</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Saldo Vacaciones:</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.SaldoVacaciones</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
