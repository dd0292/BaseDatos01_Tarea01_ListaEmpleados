@model BaseDatos01_Tarea01_ListaEmpleados.Models.EmployeeMovementsViewModel

@{
    ViewBag.Title = "Movimientos del Empleado";
}

<h2>Movimientos de @Model.Empleado.Nombre</h2>

<div class="mb-3">
    <strong>Documento de Identidad:</strong> @Model.Empleado.ValorDocumentoIdentidad <br />
    <strong>Saldo de Vacaciones:</strong> @Model.Empleado.SaldoVacaciones
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo de Movimiento</th>
            <th>Monto</th>
            <th>Nuevo Saldo</th>
            <th>Usuario</th>
            <th>IP</th>
            <th>Estampa de Tiempo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.Movimientos)
        {
            <tr>
                <td>@m.Fecha.ToShortDateString()</td>
                <td>@m.NombreTipo</td>
                <td>@m.Monto</td>
                <td>@m.NuevoSaldo</td>
                <td>@m.NombreUsuario</td>
                <td>@m.IdPostByUser</td>
                <td>@m.PostTime</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    @Html.ActionLink("Insertar Movimiento", "Create", "Movimiento", new { valorDocumentoIdentidad = Model.Empleado.ValorDocumentoIdentidad }, new { @class = "btn btn-success" })
    @Html.ActionLink("Volver", "Index", "Employee", null, new { @class = "btn btn-secondary ml-2" })
</div>
