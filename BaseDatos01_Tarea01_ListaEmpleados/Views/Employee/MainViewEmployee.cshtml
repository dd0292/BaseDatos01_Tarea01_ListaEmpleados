@model BaseDatos01_Tarea01_ListaEmpleados.Models.Employee
@{
    ViewBag.Title = "Dashboard del Empleado";
    Layout = null; // Indica que no usaremos un layout

    var userType = Session["UserType"]?.ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        /* Estilos personalizados */
        body {
            padding: 20px;
            background-color: #f8f9fa;
        }

        .card {
            transition: box-shadow 0.3s ease;
        }

            .card:hover {
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Tarjeta de información del empleado -->
        <div class="card mb-4">
            <!-- Cabecera con información del empleado -->
                        <div class="card-header bg-primary text-white position-relative">
                            <!-- Botón Regresar (solo para UserType == 1) -->
                            @if (userType == "1")
                            {
                                <a href="@Url.Action("Index", "Admin")"
                                   class="btn btn-light btn-sm position-absolute top-0 end-0 m-2">
                                    <i class="bi bi-arrow-left"></i> Regresar
                                </a>
                            }

                            <!-- Contenido del empleado (con padding condicional) -->
                            <div class="@(userType == "1" ? "pe-4" : "")">
                                <h3 class="mb-0">@Model.Nombre</h3>
                                <div class="d-flex gap-4 mt-2">
                                    <span><i class="bi bi-briefcase"></i> @Model.Puesto.Nombre</span>
                                    <span><i class="bi bi-cash-coin"></i> Salario/Hora: @Model.Puesto.SalarioXHora.ToString("C")</span>
                                </div>
                            </div>
                        </div>

                        <!-- Cuerpo de la tarjeta -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><i class="bi bi-person-vcard"></i> <strong>Documento:</strong> @Model.TipoDocumento.Nombre: @Model.ValorDocumento</p>
                                    <p><i class="bi bi-building"></i> <strong>Departamento:</strong> @Model.Departamento.Nombre</p>
                                </div>
                                <div class="col-md-6">
                                    <p><i class="bi bi-calendar"></i> <strong>Fecha Nacimiento:</strong> @Model.FechaNacimiento.ToShortDateString()</p>
                                    <p><i class="bi bi-person-circle"></i> <strong>Usuario:</strong> @Model.Usuario.Nombre</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sección de acciones principales -->
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center">
                                    <i class="bi bi-calendar-week fs-1 text-primary mb-3"></i>
                                    <h4 class="card-title">Planilla Semanal</h4>
                                    <p class="card-text">Consulta tu planilla de pagos semanal con detalles de horas trabajadas.</p>
                                    <button onclick="window.location.href='@Url.Action("Semanal", "Employee", new { id = Model.Id })'"
                                            class="btn btn-primary">
                                        Consultar Planilla Semanal
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center">
                                    <i class="bi bi-calendar-month fs-1 text-success mb-3"></i>
                                    <h4 class="card-title">Planilla Mensual</h4>
                                    <p class="card-text">Revisa tu planilla de pagos mensual con el resumen completo.</p>
                                    <button onclick="window.location.href='@Url.Action("Monthly", "Employee", new { id = Model.Id })'"
                                            class="btn btn-success">
                                        Consultar Planilla Mensual
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sección de estado -->
                    <div class="card mt-4">
                        <div class="card-header bg-info text-white">
                            <h4 class="mb-0"><i class="bi bi-info-circle"></i> Información Importante</h4>
                        </div>
                        <div class="card-body">
                            <div class="alert @(Model.Estado ? "alert-success" : "alert-danger")">
                                <i class="bi @(Model.Estado ? "bi-check-circle" : "bi-exclamation-triangle")"></i>
                                <strong>Estado Actual:</strong>
                                @(Model.Estado ? "Activo" : "Inactivo")
                            </div>
                            <p>Para cualquier consulta sobre tus planillas, contacta a Recursos Humanos.</p>
                        </div>
                    </div>
                </div>

                <!-- jQuery y Bootstrap JS -->
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

                <script>
        $(document).ready(function() {
            console.log("Dashboard cargado para empleado ID: @Model.Id");

            // Efecto hover para tarjetas
            $('.card').hover(
                function() { $(this).addClass('shadow-sm'); },
                function() { $(this).removeClass('shadow-sm'); }
            );
        });
                </script>
</body>
</html>