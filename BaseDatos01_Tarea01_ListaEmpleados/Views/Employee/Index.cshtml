@model IEnumerable<BaseDatos01_Tarea01_ListaEmpleados.Models.Employee>

@{
    ViewBag.Title = "Lista Empleados";
}

<h2>Lista de Empleados</h2>

@if (TempData["InfoMessage"] != null)
{
    <div class="alert  alert-info">
        <strong>Informacion: </strong>  @TempData["InfoMessage"]
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert  alert-success">
        <strong>Informacion: </strong>  @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert  alert-danger">
        <strong>ERROR: </strong>  @TempData["ErrorMessage"]
    </div>
}

@using (Html.BeginForm("Filtrar", "Empleado", FormMethod.Get))
{
    <div class="d-flex mb-3">
        <input type="text" name="filtro" class="form-control mr-2" placeholder="Buscar por nombre o documento" />
        <button type="submit" class="btn btn-info">Filtrar</button>
    </div>
}

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            Consulta, Borrado o Editar
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Salario)</td>

            <td>
                @Html.ActionLink("Consulta", "Create", null, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Editar", "Create", null, new { @class = "btn btn-success btn-sm" })
                @Html.ActionLink("Borrar", "Create", null, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Insertar Empleado", "Create", null, new { @class = "btn btn-primary" })
</p>
