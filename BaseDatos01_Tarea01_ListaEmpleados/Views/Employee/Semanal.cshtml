@@model BaseDatos01_Tarea01_ListaEmpleados.Models.PlanillaSem
@using BaseDatos01_Tarea01_ListaEmpleados.Models

@{
    var diasSemana = new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo" };
}

<div class="card">
    <!-- Cabecera con información del empleado -->
    <div class="card-header bg-primary text-white">
        <div>
            <h3 class="mb-0">@Model.NombreCompleto</h3>
            <div class="d-flex gap-4 mt-2">
                <span><i class="bi bi-briefcase"></i> @Model.Puesto</span>
                <span><i class="bi bi-cash-coin"></i> @Model.SalarioHora.ToString("C")/hora</span>
            </div>
        </div>
    </div>

    <!-- Información de la semana -->
    <div class="card-body py-2 bg-light">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="mb-0">
                    Semana del @Model.Semana.FechaInicio.ToString("dd/MM/yyyy") al @Model.Semana.FechaFin.ToString("dd/MM/yyyy")
                    @if (Model.Semana.Cerrada)
                    {
                        <span class="badge bg-success ms-2">Cerrada</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark ms-2">En Proceso</span>
                    }
                </h5>
            </div>
            <div class="col-md-4 text-end">
                <span class="badge bg-info text-dark">
                    <i class="bi bi-info-circle"></i> Actualizado: @DateTime.Now.ToString("g")
                </span>
            </div>
        </div>
    </div>

    <!-- Tabla de días -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover m-0">
                <thead class="table-dark">
                    <tr>
                        <th>Día</th>
                        <th>Fecha</th>
                        <th class="text-end">Horas</th>
                        <th class="text-end">Salario</th>
                        <th>Movimientos</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 7; i++)
                    {
                        var fecha = Model.Semana.FechaInicio.AddDays(i);
                        var tieneMovimientos = Model.Semana.MovimientosPorDia[i].Count > 0;

                        <tr>
                            <td>@diasSemana[i]</td>
                            <td>@fecha.ToString("dd/MM/yyyy")</td>
                            <td class="text-end @(Model.Semana.HorasPorDia[i] == 0 ? "text-muted" : "fw-bold")">
                                @Model.Semana.HorasPorDia[i].ToString("0.00")
                            </td>
                            <td class="text-end">
                                @((Model.Semana.HorasPorDia[i] * Model.SalarioHora).ToString("C"))
                            </td>
                            <td>
                                @if (tieneMovimientos)
                                {
                                    <button class="btn btn-sm btn-outline-primary detalles-movimiento"
                                            data-bs-toggle="modal"
                                            data-bs-target="#movimientosModal"
                                            data-dia="@i"
                                            data-fecha="@fecha.ToString("dd/MM/yyyy")">
                                        <i class="bi bi-list-ul"></i> (@Model.Semana.MovimientosPorDia[i].Count)
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted">Sin movimientos</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Resumen financiero -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="p-3 border border-success rounded">
                    <h5 class="text-success">Salario Bruto</h5>
                    <h3 class="text-success">@Model.Semana.SalarioBruto.ToString("C")</h3>
                    <small class="text-muted">@Model.Semana.HorasTotales.ToString("0.00") horas trabajadas</small>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="p-3 border border-danger rounded">
                    <h5 class="text-danger">Descuentos</h5>
                    <h3 class="text-danger">@Model.Semana.Descuentos.ToString("C")</h3>
                    <small class="text-muted">@Model.Semana.MotivoDescuento</small>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="p-3 border border-primary rounded">
                    <h5 class="text-primary">Salario Neto</h5>
                    <h3 class="text-primary">@Model.Semana.SalarioNeto.ToString("C")</h3>
                    <small class="text-muted">Líquido a pagar</small>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal para detalles de movimientos -->
<div class="modal fade" id="movimientosModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Movimientos del día</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Generamos un contenedor para cada día -->
                @for (int i = 0; i < 7; i++)
                {
                    var fecha = Model.Semana.FechaInicio.AddDays(i);
                    var tieneMovimientos = Model.Semana.MovimientosPorDia[i].Count > 0;

                    <div id="movimientos-dia-@i" class="dia-movimientos" style="display: none;">
                        <div class="mb-3">
                            <h6>@diasSemana[i] @fecha.ToString("dd/MM/yyyy")</h6>
                            <p class="mb-1">
                                <strong>Total horas:</strong>
                                <span class="badge bg-primary">@Model.Semana.HorasPorDia[i].ToString("0.00")</span>
                            </p>
                            <p>
                                <strong>Total salario:</strong>
                                <span class="badge bg-success">@((Model.Semana.HorasPorDia[i] * Model.SalarioHora).ToString("C"))</span>
                            </p>
                        </div>

                        @if (tieneMovimientos)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Tipo</th>
                                            <th>Categoría</th>
                                            <th class="text-end">Horas</th>
                                            <th class="text-end">Monto</th>
                                            <th>Descripción</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var mov in Model.Semana.MovimientosPorDia[i])
                                        {
                                            string rowClass = "";
                                            if (mov.TipoMovimiento == "Horas Normales") { rowClass = "table-success"; }
                                            else if (mov.TipoMovimiento == "Horas Extras") { rowClass = "table-warning"; }
                                            else if (mov.TipoMovimiento == "Descuento") { rowClass = "table-danger"; }

                                            <tr class="@rowClass">
                                                <td>@mov.TipoMovimiento</td>
                                                <td>@mov.Categoria</td>
                                                <td class="text-end">@mov.Horas.ToString("0.00")</td>
                                                <td class="text-end">@mov.Monto.ToString("C")</td>
                                                <td>@mov.Descripcion</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">No hay movimientos para este día</div>
                        }
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.detalles-movimiento').forEach(btn => {
            btn.addEventListener('click', function () {
                const dia = this.getAttribute('data-dia');

                // Ocultar todos los contenedores primero
                document.querySelectorAll('.dia-movimientos').forEach(div => {
                    div.style.display = 'none';
                });

                // Mostrar solo el contenedor del día seleccionado
                document.getElementById(`movimientos-dia-${dia}`).style.display = 'block';
            });
        });
    </script>
}