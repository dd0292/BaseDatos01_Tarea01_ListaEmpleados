@@model BaseDatos01_Tarea01_ListaEmpleados.Models.PlanillaSem
@using BaseDatos01_Tarea01_ListaEmpleados.Models

@{
    var diasSemana = new[] { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo" };

    // Para acceder a los tipos anidados más fácilmente
    var semana = Model.Semana;
}

<div class="card">
    <!-- Cabecera con información del empleado -->
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 class="mb-0">@Model.NombreCompleto</h3>
                <div class="d-flex gap-4 mt-2">
                    <span><i class="bi bi-briefcase"></i> @Model.Puesto</span>
                    <span><i class="bi bi-cash-coin"></i> @Model.SalarioHora.ToString("C")/hora</span>
                </div>
            </div>
            <div>
                <button class="btn btn-sm btn-light me-2">
                    <i class="bi bi-printer"></i> Imprimir
                </button>
                <button class="btn btn-sm btn-light">
                    <i class="bi bi-download"></i> Exportar
                </button>
            </div>
        </div>
    </div>

    <!-- Información de la semana -->
    <div class="card-body py-2 bg-light">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="mb-0">
                    Semana del @Model.Semana.FechaInicio.ToString("dd/MM/yyyy") al @Model.Semana.FechaFin.ToString("dd/MM/yyyy")
                    @if (Model.Semana.Cerrada)
                    {
                        <span class="badge bg-success ms-2">Cerrada</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark ms-2">En Proceso</span>
                    }
                </h5>
            </div>
            <div class="col-md-4 text-end">
                <span class="badge bg-info text-dark">
                    <i class="bi bi-info-circle"></i> Actualizado: @DateTime.Now.ToString("g")
                </span>
            </div>
        </div>
    </div>

    <!-- Tabla de días -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover m-0">
                <thead class="table-dark">
                    <tr>
                        <th>Día</th>
                        <th>Fecha</th>
                        <th class="text-end">Horas</th>
                        <th class="text-end">Salario</th>
                        <th>Movimientos</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 7; i++)
                    {
                        var fecha = Model.Semana.FechaInicio.AddDays(i);
                        var tieneMovimientos = Model.Semana.MovimientosPorDia[i].Count > 0;

                        <tr>
                            <td>@diasSemana[i]</td>
                            <td>@fecha.ToString("dd/MM/yyyy")</td>
                            <td class="text-end @(Model.Semana.HorasPorDia[i] == 0 ? "text-muted" : "fw-bold")">
                                @Model.Semana.HorasPorDia[i]
                            </td>
                            <td class="text-end">
                                @((Model.Semana.HorasPorDia[i] * Model.SalarioHora).ToString("C"))
                            </td>
                            <td>
                                @if (tieneMovimientos)
                                {
                                    <button class="btn btn-sm btn-outline-primary detalles-movimiento"
                                            data-dia="@i"
                                            data-fecha="@fecha.ToString("dd/MM/yyyy")">
                                        <i class="bi bi-list-ul"></i> (@Model.Semana.MovimientosPorDia[i].Count)
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted">Sin movimientos</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Resumen financiero -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="p-3 border border-success rounded">
                    <h5 class="text-success">Salario Bruto</h5>
                    <h3 class="text-success">@Model.Semana.SalarioBruto.ToString("C")</h3>
                    <small class="text-muted">@Model.Semana.HorasTotales horas trabajadas</small>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="p-3 border border-danger rounded">
                    <h5 class="text-danger">Descuentos</h5>
                    <h3 class="text-danger">@Model.Semana.Descuentos.ToString("C")</h3>
                    <small class="text-muted">@Model.Semana.MotivoDescuento</small>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="p-3 border border-primary rounded">
                    <h5 class="text-primary">Salario Neto</h5>
                    <h3 class="text-primary">@Model.Semana.SalarioNeto.ToString("C")</h3>
                    <small class="text-muted">Líquido a pagar</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para detalles de movimientos -->
<div class="modal fade" id="movimientosModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="movimientosModalTitle">Movimientos del día</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-sm" id="tablaMovimientos">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Categoría</th>
                                <th class="text-end">Horas</th>
                                <th class="text-end">Monto</th>
                                <th>Descripción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Los movimientos se cargarán aquí dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Crear objeto con los movimientos por día
        const movimientosPorDia = {
            @for (int i = 0; i < 7; i++)
            {
                @Html.Raw($"{i}: [")
                foreach (var mov in Model.Semana.MovimientosPorDia[i])
                {
                    @Html.Raw($"{{ tipoMovimiento: '{mov.TipoMovimiento}', categoria: '{mov.Categoria}', horas: {mov.Horas}, monto: {mov.Monto}, descripcion: '{mov.Descripcion}' }},")
                }
                @Html.Raw("],")
            }
        };

        // Configurar los botones de detalles de movimientos
        document.querySelectorAll('.detalles-movimiento').forEach(btn => {
            btn.addEventListener('click', function() {
                const dia = parseInt(this.getAttribute('data-dia'));
                const fecha = this.getAttribute('data-fecha');

                document.getElementById('movimientosModalTitle').textContent = `Movimientos - ${fecha}`;

                const tbody = document.querySelector('#tablaMovimientos tbody');
                tbody.innerHTML = '';

                movimientosPorDia[dia].forEach(mov => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${mov.tipoMovimiento}</td>
                        <td>${mov.categoria}</td>
                        <td class="text-end">${mov.horas}</td>
                        <td class="text-end">${mov.monto.toFixed(2)}</td>
                        <td>${mov.descripcion}</td>
                    `;
                    tbody.appendChild(row);
                });

                new bootstrap.Modal(document.getElementById('movimientosModal')).show();
            });
        });
    </script>
}}